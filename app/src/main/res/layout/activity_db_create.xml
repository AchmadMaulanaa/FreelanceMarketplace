<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Tambah Data Pekerjaan" />

    <EditText
        android:id="@+id/et_pekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Pekerjaan"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_namaPerusahaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Perusahaan"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_alamatPerusahaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat Perusahaan"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_gajiPerusahaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gaji "
        android:inputType="number" />

    <EditText
        android:id="@+id/et_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deskripsi"
        android:inputType="text" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />


</LinearLayout>